<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#eee1e1"
        android:layout_marginTop="10sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:src="@drawable/images"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theatre"
        android:id="@+id/textView17"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPressedHighlight"
        android:textSize="22sp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seats"
        android:id="@+id/textView18"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:textColor="@color/colorPressedHighlight"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theascr"
        android:textColor="#eee1e1"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noofseats"
        android:textColor="#eee1e1"
        android:layout_alignTop="@+id/theascr"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/textView21"
        android:textColor="@color/colorPressedHighlight"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/theascr"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="@color/colorPressedHighlight"
        android:id="@+id/textView23"
        android:textSize="22sp"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignRight="@+id/noofseats"
        android:layout_alignEnd="@+id/noofseats" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/price"
        android:textColor="#eee1e1"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date"
        android:textColor="#eee1e1"
        android:layout_alignTop="@+id/price"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/time"
        android:textColor="#eee1e1"
        android:layout_alignTop="@+id/date"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_alignRight="@+id/emailid"
        android:layout_alignEnd="@+id/emailid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/pay"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"

        android:id="@+id/textView27"
        android:textColor="@color/colorPressedHighlight"
        android:layout_below="@+id/price"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price"
        android:layout_marginTop="35dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="#eee1e1"
        android:id="@+id/emailid"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignLeft="@+id/pay"
        android:layout_alignStart="@+id/pay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPressedHighlight"
        android:text="Phone:"
        android:id="@+id/textView28"

        android:textSize="20sp"
        android:layout_above="@+id/pay"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColor="#eee1e1"
        android:id="@+id/phone"
        android:maxLength="10"
        android:layout_above="@+id/pay"
        android:layout_alignLeft="@+id/emailid"
        android:layout_alignStart="@+id/emailid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/colorPressedHighlight"
        android:id="@+id/textView19"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:textSize="20sp" />

</RelativeLayout>
